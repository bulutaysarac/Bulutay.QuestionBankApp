@model UserCreateModel
@{
    Layout = "_AdminLayout";
}

<form class="m-auto w-50" method="post" asp-action="Create" asp-controller="User">
    <h1 class="text-center mb-5">Yeni Kullanıcı Oluştur</h1>
    <div class="mb-3">
        <label asp-for="@Model.Username">Kullanıcı Adı : </label>
        <span class="text-danger">*</span>
        <span class="text-danger" asp-validation-for="@Model.Username"></span>
        <input class="form-control" type="text" asp-for="@Model.Username"/>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password">Şifre : </label>
        <span class="text-danger">*</span>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input class="form-control" type="text" asp-for="@Model.Password"/>
    </div>
    <div class="mb-3">
        @if (Model.DbRoles.Count > 0)
        {
            foreach (RoleListModel role in Model.DbRoles)
            {
                <input type="checkbox" id="@("cbRole" + role.Id)" name="RoleIds" value="@role.Id">
                <label for="@("cbRole" + role.Id)">@role.Definition</label>
            }
        }
    </div>
    <div class="d-grid mb-3">
        <button class="btn btn-primary w-100" type="submit">Oluştur</button>
    </div>
</form>