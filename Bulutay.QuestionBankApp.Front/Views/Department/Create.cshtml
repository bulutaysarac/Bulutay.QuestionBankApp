@model DepartmentCreateModel
@{
    Layout = "_AdminLayout";
}

<form class="m-auto w-50" method="post" asp-action="Create" asp-controller="Department">
    <h1 class="text-center mb-5">Yeni Bölüm Oluştur</h1>
    <div class="mb-3">
        <label asp-for="@Model.Definition">Tanım : </label>
        <span class="text-danger">*</span>
        <span class="text-danger" asp-validation-for="@Model.Definition"></span>
        <input class="form-control" type="text" asp-for="@Model.Definition"/>
    </div>
    <div class="d-grid mb-3">
        <button class="btn btn-primary w-100" type="submit">Oluştur</button>
    </div>
</form>