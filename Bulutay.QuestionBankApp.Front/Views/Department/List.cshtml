@model List<DepartmentListModel>
@{
    Layout = "_AdminLayout";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tanım</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count > 0)
        {
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Definition</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Department" asp-route-id="@department.Id">Güncelle</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-controller="Department" asp-route-id="@department.Id">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a class="btn btn-primary d-block" type="button" asp-action="Create" asp-controller="Department">Oluştur</a>
