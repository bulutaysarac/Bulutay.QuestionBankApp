@model List<QuestionListModel>
@{
    Layout = "_AdminLayout";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Soru Metni</th>
            <th>Doğru Mu?</th>
            <th>Kategori</th>
            <th>Ders</th>
            <th>Kullanıcı</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count > 0)
        {
            @foreach (var question in Model)
            {
                <tr>
                    <td>@question.Id</td>
                    <td>@question.Body</td>
                    <td>@question.IsCorrect</td>
                    <td>@question.Category.Definition</td>
                    <td>@question.Lecture.Name</td>
                    <td>@question.User.Username</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Question" asp-route-id="@question.Id">Güncelle</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-controller="Question" asp-route-id="@question.Id">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a class="btn btn-primary d-block" type="button" asp-action="Create" asp-controller="Question">Oluştur</a>
