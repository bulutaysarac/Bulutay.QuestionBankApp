@model List<LectureListModel>
@{
    Layout = "_AdminLayout";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Bölüm</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count > 0)
        {
            @foreach (var lecture in Model)
            {
                <tr>
                    <td>@lecture.Id</td>
                    <td>@lecture.Name</td>
                    <td>@lecture.Department?.Definition</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Lecture" asp-route-id="@lecture.Id">Güncelle</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-controller="Lecture" asp-route-id="@lecture.Id">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a class="btn btn-primary d-block" type="button" asp-action="Create" asp-controller="Lecture">Oluştur</a>
