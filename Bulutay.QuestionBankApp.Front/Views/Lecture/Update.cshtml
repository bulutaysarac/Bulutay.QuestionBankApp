@model LectureUpdateModel
@{
    Layout = "_AdminLayout";
}

<form class="m-auto w-50" method="post" asp-action="Update" asp-controller="Lecture">
    <h1 class="text-center mb-5">Ders Güncelle</h1>
    <input type="hidden" asp-for="@Model.Id" />
    <div class="mb-3">
        <label asp-for="@Model.Name">Ad : </label>
        <span class="text-danger">*</span>
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
        <input class="form-control" type="text" asp-for="@Model.Name" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.DepartmentId">Bölüm : </label>
        <span class="text-danger">*</span>
        <span class="text-danger" asp-validation-for="@Model.Id"></span>
        <select class="form-control" asp-for="@Model.DepartmentId">
            <option value="0">Bölüm Seç...</option>
            @if (ViewBag.Departments is List<DepartmentListModel> departments)
            {
                foreach (var department in departments)
                {
                    <option value="@department.Id">@department.Definition</option>
                }
            }
        </select>
    </div>
    <div class="d-grid mb-3">
        <button class="btn btn-primary w-100" type="submit">Kaydet</button>
    </div>
</form>