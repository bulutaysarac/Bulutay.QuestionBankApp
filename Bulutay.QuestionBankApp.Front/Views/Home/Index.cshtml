@{
    Layout = "_UserLayout";
}

<header class="bg-dark vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center mb-5">
                    <img src="/user-template/assets/logo.png" class="img-fluid" />
                    <h1 class="fw-bolder text-white mb-2">Sınavlarınız için soru bulmakta güçlük mü çekiyorsunuz? Bizim sorularımızı kullanın!</h1>
                    <p class="lead text-white-50 mb-4">Hızlıca soru oluşturun veya var olan soruları özelleştirin. Dünyanın en ünlü soru veritabanı!</p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-primary btn-lg px-4 w-25">Oluştur</a>
                            <a class="btn btn-outline-light btn-lg px-4 w-25">Özelleştir</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-light btn-lg px-4 w-25" asp-action="SignUp" asp-controller="Account">Kayıt Ol</a>
                            <a class="btn btn-primary btn-lg px-4 w-25" asp-action="SignIn" asp-controller="Account">Giriş Yap</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>